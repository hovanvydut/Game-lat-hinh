<% 
    for (elm of db) {
        elm.order = Math.random();
    }
    
    db.sort((a, b) => {
        return a.order - b.order;
    });

    showImg = (db) => {
        let xhtml = '';
        db.forEach(elm => {
            xhtml+=`<div class="card" value='${JSON.stringify(elm)}'><img src="${elm.backImg}" alt="${elm.type}"></div>`
        })
        return xhtml;
    }
%>